---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ContentCard from '../../components/ContentCard.astro';

const notes = [
  {
    title: "CS50",
    date: "sometime in 2025",
    description: "I recently worked through a few Harvard CS courses, and I might polish up and publish my notes from the same",
    href: "/notes/notesplaceholder1",
    tags: ["CS", "reference"]
  },
  {
    title: "Notes on Feminism (I'm a big one)",
    date: "never lmao. maybe 2107 if i make it",
    description: "I read [canonical feminist literature]. Here are my notes on it",
    href: "/notes/notesplaceholder2",
    tags: ["feminism", "justnithilthings"]
  },
  {
    title: "More Notes",
    date: "2026",
    description: "I'm running out of placeholder ideas",
    href: "/notes/notesplaceholder3",
    tags: ["placeholder", "PlAcEhOlDeR"]
  },
  {
    title: "Life",
    date: "2027",
    description: "Real pithy stuff",
    href: "/notes/notesplaceholder4",
    tags: ["pithy", "peakwriting", "beautiful"]
  }
];
---

<Layout 
  title="Notes - Your Name"
  description="Short thoughts and observations on design, technology, and creativity"
>
  <Header />
  
  <main class="main-content">
    <div class="container">
      <section class="page-header">
        <h1 class="page-title">notes</h1>
        <p class="page-description">
          Short thoughts, observations, and fragments. Less formal than essays, more developed than tweets. A place for ideas that don't yet deserve their own essay but are worth sharing.
        </p>
      </section>
      
      <section class="notes-list">
        <div class="content-list">
          {notes.map(note => (
            <ContentCard
              title={note.title}
              date={note.date}
              description={note.description}
              href={note.href}
              tags={note.tags}
              type="note"
            />
          ))}
        </div>
      </section>
    </div>
  </main>
  
  <Footer />
</Layout>

<style>
  .main-content {
    flex: 1;
  }
  
  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: var(--space-2xl) var(--space-lg);
  }
  
  .page-header {
    margin-bottom: var(--space-2xl);
  }
  
  .page-title {
    font-family: var(--font-family-mono);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 var(--space-lg);
    text-transform: lowercase;
  }
  
  .page-description {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
  }
  
  .content-list {
    display: flex;
    flex-direction: column;
  }
  
  @media (max-width: 768px) {
    .container {
      padding: var(--space-xl) var(--space-md);
    }
  }
</style>
