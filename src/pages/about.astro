---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import asciiArt from '../ascii-art.txt?raw';
---

<Layout title="About – Nithil R" description="About page for Nithil R">
  <Header />

  <div class="ascii-container">
    <pre class="ascii-art">{asciiArt}</pre>
    <div class="ascii-links">
      <a href="/avocations">Avocations</a>
      <a href="/im-scared">I’m Scared</a>
      <a href="/neurodivergence">Neurodivergence</a>
    </div>
  </div>

  <Footer />
</Layout>

<style>
.ascii-container {
  position: relative;
  overflow-x: auto;
}
.ascii-art {
  margin: 0;
  padding: 0;
  white-space: pre;
  font-family: monospace;
  font-size: 6px;   /* ← tweak until art fits */
  line-height: 1;
}
.ascii-links {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  justify-content: space-around;
  width: 100%;
  pointer-events: none;
}
.ascii-links a {
  pointer-events: auto;
  font-family: var(--font-family-sans);
  font-size: 1.75rem;
  font-weight: bold;
  color: var(--color-text);
  text-decoration: none;
  text-shadow: 1px 1px rgba(255,255,255,0.8);
  padding: 0.25rem 0.5rem;
  white-space: nowrap;
}
.ascii-links a:hover {
  color: var(--color-accent);
  text-decoration: underline;
}
@media (max-width: 768px) {
  .ascii-art { font-size: 5px; }
  .ascii-links a { font-size: 1.25rem; }
}
</style>
