<style>
  :root {
    /* match this to your ASCII’s widest line */
    --ascii-cols: 200;
  }

  /* 1) full-page fixed ASCII behind everything */
  .ascii-wrapper {
    position: fixed;
    top: 0; left: 0;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    pointer-events: none;
    z-index: -1;
  }
  .ascii-bg {
    margin: 0;
    padding: 0;
    white-space: pre;
    font-family: monospace;
    font-size: clamp(4px, calc(100vw / var(--ascii-cols)), 12px);
    line-height: 1;
    opacity: 0.5;       /* tweak to darken/lighten */
  }

  /* 2) bring your content above it */
  .main-content {
    position: relative;
    z-index: 1;
    flex: 1;
  }
  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: var(--space-2xl) var(--space-lg);
    background: transparent;
  }

  /* header styling */
  .page-header {
    margin-bottom: var(--space-2xl);
  }
  .page-title {
    font-family: var(--font-family-mono);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 var(--space-lg);
    text-transform: lowercase;
  }
  .page-description {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  /* 3) raised panel effect on each card */
  .raised {
    background: rgba(255,255,255,0.85);
    border-radius: var(--radius-lg);
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    margin-bottom: var(--space-lg);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .raised:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0,0,0,0.15);
  }

  .content-list {
    display: flex;
    flex-direction: column;
  }

  @media (max-width: 768px) {
    .container {
      padding: var(--space-xl) var(--space-md);
    }
  }
</style>
