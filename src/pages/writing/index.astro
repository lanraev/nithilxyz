---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ContentCard from '../../components/ContentCard.astro';

// In a real site, this would be dynamic data from markdown files or a CMS
const allWriting = [
  {
    title: "Into the Rabbit Hole",
    date: "sometime in 2025",
    description: "A guide for people from all backgrounds who are inspired by and want to learn physics, but don't know where to start, what to learn, what to read, and how to structure their studies.",
    href: "/writing/fundamentalphysicsguide",
    tags: ["physics", "autodidactism", "guides"]
  },
  {
    title: "The Genome is Not a Democracy",
    date: "sometime in 2025",
    description: "The sociological effects of Genetic Screening and Editing as marketized services",
    href: "/writing/thesociologyofgenetics&e",
    tags: ["biotech", "sociology", "philosophy"]
  },
  {
    title: "Before the Paradigm",
    date: "sometime in 2025",
    description: "Framing, Physics, the loss of Human Epistemic Centrality, the epistemic trajectories of Non-Human Intelligence, and reckoning with their Ontological ascent",
    href: "/writing/thefutureofphysicsresearchiloasi",
    tags: ["physics", "ASI", "philosophy"]
  },
  {
    title: "Placeholder",
    date: "sometime by 2037",
    description: "A banger post that critically examines/ reimagines/ speculates on [cutting edge of human endeavour]",
    href: "/writing/surefirebanger",
    tags: ["banger", "banger", "banger"]
  }
];
---

<Layout 
  title="Writing - Your Name"
  description="Essays and thoughts on computing, design, and human-computer interaction"
>
  <Header />
  
  <main class="main-content">
    <div class="container">
      <section class="page-header">
        <h1 class="page-title">writing</h1>
        <p class="page-description">
          Essays and thoughts on computing, design, and the ways technology can augment human thinking. Most pieces are works in progressâ€”living documents that evolve with my understanding.
        </p>
      </section>
      
      <section class="writing-list">
        <div class="content-list">
          {allWriting.map(post => (
            <ContentCard
              title={post.title}
              date={post.date}
              description={post.description}
              href={post.href}
              tags={post.tags}
              type="writing"
            />
          ))}
        </div>
      </section>
    </div>
  </main>
  
  <Footer />
</Layout>

<style>
  .main-content {
    flex: 1;
  }
  
  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: var(--space-2xl) var(--space-lg);
  }
  
  .page-header {
    margin-bottom: var(--space-2xl);
  }
  
  .page-title {
    font-family: var(--font-family-mono);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 var(--space-lg);
    text-transform: lowercase;
  }
  
  .page-description {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
  }
  
  .content-list {
    display: flex;
    flex-direction: column;
  }
  
  @media (max-width: 768px) {
    .container {
      padding: var(--space-xl) var(--space-md);
    }
  }
</style>
