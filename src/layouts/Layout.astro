---
export interface Props {
  title?: string;
  description?: string;
  author?: string;
  canonical?: string;
}

const {
  title = "Personal Website",
  description = "Thoughts, projects, and explorations",
  author = "Your Name",
  canonical = Astro.url.href
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <link rel="canonical" href={canonical} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:type" content="website" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    
    <style>
      :root {
        --color-text: #e8e8e8;
        --color-text-secondary: #b8b8b8;
        --color-text-muted: #888888;
        --color-background: #1a1a1a;
        --color-background-secondary: #2a2a2a;
        --color-border: #333333;
        --color-border-hover: #444444;
        --color-accent: #4a9eff;
        --color-accent-hover: #66b3ff;
        --color-accent-yellow: #ffeb3b;
        
        --font-family-mono: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
        --font-family-sans: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
        
        --max-width: 800px;
        --space-xs: 0.25rem;
        --space-sm: 0.5rem;
        --space-md: 1rem;
        --space-lg: 1.5rem;
        --space-xl: 2rem;
        --space-2xl: 3rem;
        
        --border-radius: 3px;
        --transition: all 0.15s ease;
      }
      
      @media (prefers-color-scheme: light) {
        :root {
          --color-text: #2a2a2a;
          --color-text-secondary: #555555;
          --color-text-muted: #777777;
          --color-background: #ffffff;
          --color-background-secondary: #f8f8f8;
          --color-border: #dddddd;
          --color-border-hover: #bbbbbb;
          --color-accent: #0066cc;
          --color-accent-hover: #0052a3;
          --color-accent-yellow: #cc9900;
        }
      }
      
      * {
        box-sizing: border-box;
      }
      
      html {
        font-family: var(--font-family-mono);
        font-size: 14px;
        line-height: 1.6;
        color: var(--color-text);
        background-color: var(--color-background);
      }
      
      body {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        position: relative;
      }
      
      body::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('/src/assets/ascii-art.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        opacity: 0.03;
        z-index: -1;
        pointer-events: none;
      }
      
      @media (prefers-color-scheme: light) {
        body::before {
          opacity: 0.02;
        }
      }
      
      @media (max-width: 768px) {
        html {
          font-size: 13px;
        }
        
        body::before {
          opacity: 0.02;
        }
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>